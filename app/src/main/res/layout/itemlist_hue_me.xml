<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_hue_time_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/dohyeon"
            android:text="11:40 PM"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_hue_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/tv_hue_radius"
            android:backgroundTint="#2C8878"
            android:fontFamily="@font/dohyeon"
            android:text="으아아ㅏ아 자고싶어!!!피곤해!!"
            android:textColor="@color/white"
            android:textSize="15dp"></TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>