<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/location_roundeditem"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:paddingVertical="15dp"
    android:paddingHorizontal="25dp"
    android:orientation="vertical"
    android:elevation="4dp">

        <TextView
            android:id="@+id/tv_preview_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="리뷰 제목" />

        <TextView
            android:id="@+id/tv_preview_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="16dp"
            android:text="리뷰 내용" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/img_preview_review_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_preview_review_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="14dp"
                android:text="닉네임" />

            <TextView
                android:id="@+id/tv_preview_review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textSize="14dp"
                android:text="23분전" />
        </LinearLayout>

</LinearLayout>