<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/location_roundeditem"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:elevation="4dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_find_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="사랑의 커피" />

        <TextView
            android:id="@+id/tv_find_location_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="14dp"
            android:textColor="@color/light_gray"
            android:text="카페/베이커리" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/location_green" />

            <TextView
                android:id="@+id/tv_find_location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textColor="@color/light_gray"
                android:text="현재 위치에서 10m" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>