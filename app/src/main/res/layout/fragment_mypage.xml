<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MypageFragment"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="14dp"
    android:orientation="vertical"
    android:background = "@drawable/mypagedraw"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:text="로그아웃"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        android:id="@+id/btn_logout"
        android:background="@drawable/dialog_radius"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홍길동"
        android:layout_marginTop="130dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_bold"
        android:layout_gravity="center"
        android:id="@+id/tv_mypage_name"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임변경"
            android:textSize="13sp"
            android:textColor="#88B497"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            android:layout_gravity="center"
            android:id="@+id/btn_mypage_pencil"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sookmyung@gmail.com"
        android:textColor="#858585"
        android:textSize="13sp"
        android:fontFamily="@font/inter_medium"
        android:layout_gravity="center"
        android:id="@+id/tv_mypage_email"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/dialog_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사이트바로가기"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_mypage"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="0"
            >

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>