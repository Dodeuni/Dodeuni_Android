<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/location_roundeditem"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    android:elevation="4dp"
    android:padding="20dp"
    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_community_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold"
                        android:text="5세 여자 아이 조언부탁드려요"/>
                    <TextView
                        android:fontFamily="@font/inter_medium"
                        android:id="@+id/tv_community_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="올해로 5살 되는 여자 아이인데... ..."/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_communitylist"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_community_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="14dp"
                    android:text="닉네임"/>
                <TextView
                    android:fontFamily="@font/inter_regular"
                    android:id="@+id/tv_community_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23분 전"
                    android:textColor="#FF474747"
                    android:textSize="13dp"
                    android:layout_gravity="end"/>
            </LinearLayout>

</LinearLayout>