<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="312dp"
    android:layout_height="210dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/tv_question_nickname"
        android:text="닉네임변경"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="변경할닉네임"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/inter_medium"
       />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:id="@+id/etet_newnickname"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_radius"
        android:hint="변경할 닉네임을 입력해주세요"

        android:padding="10dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/et_nickname"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nickname_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_radius"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            />
        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nickname_ok"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_radius"
            android:text="완료"
            android:backgroundTint="#2C8878"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
    </LinearLayout>


</LinearLayout>